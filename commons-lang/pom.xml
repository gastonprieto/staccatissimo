<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sf.staccatocommons</groupId>
	<artifactId>commons-lang</artifactId>
	<name>Staccato-Commons-Lang</name>
	<description>Staccato-Commons core classes</description>
	<version>1.2-SNAPSHOT</version>
	<inceptionYear>2010</inceptionYear>
	<url>http://staccatocommons.sourceforge.net/${project.artifactId}</url>
	<scm>
		<developerConnection>scm:svn:${staccatissimo.scm.base}/trunk/commons-lang</developerConnection>
		<connection>scm:svn:${staccatissimo.scm.base}/trunk/commons-lang</connection>
		<url>${staccatissimo.scm.view.base}/trunk/commons-lang/</url>
	</scm>
	<parent>
		<groupId>net.sf.staccatocommons</groupId>
		<artifactId>commons-parent-pom</artifactId>
		<version>1.2-SNAPSHOT</version>
	</parent>
	<distributionManagement>
		<site>
			<id> ${distribution.site.id}</id>
			<url>${distribution.site.url}/${project.artifactId}</url>
		</site>
	</distributionManagement>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.0.1</version>
				<configuration>
					<excludeFilterFile>src/main/findbugs/findbugs-exclude.xml</excludeFilterFile>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
	<dependencies>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>net.sf.staccatocommons</groupId>
			<artifactId>commons-iterators</artifactId>
			<version>${project.version}</version>
		</dependency>
        <dependency>
            <groupId>net.sf.staccatocommons</groupId>
            <artifactId>commons-testing</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
	</dependencies>
</project>
