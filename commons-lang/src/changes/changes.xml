<document xmlns="http://maven.apache.org/changes/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
	<properties>
		<title>Staccato-Commons-Lang Changes History</title>
		<author>flbulgarelli</author>
	</properties>
	<body>
		<release version="1.0-alpha-1" date="2011-01-08" description="Inception">
			<action dev="flbulgarelli" type="add">
				Initial Version, with Ranges,
				Sequences, Options, Functions, Tuples, Blocks,
				Predicates,
				Lifecycles, BasicEquals, Nulls, SoftExceptions, MapBuilder and
				Provders
			</action>
		</release>
		<release version="1.0-alpha-2" date="2011-01-21" description="Types">
			<action dev="flbulgarelli" type="add">
				Added NumericTypes
            </action>
			<action dev="flbulgarelli" type="add">
				Added Provider as abstract
				base class for Thunks
            </action>
			<action dev="flbulgarelli" type="add">
				Added RelevantState
            </action>
			<action dev="flbulgarelli" type="add">
				Added thread-safe Lazy, and
				lazy and delayed results for Functions and
				Blocks
            </action>
		</release>
		<release version="1.0-alpha-3" date="2011-01-30" description="Streams">
			<action dev="flbulgarelli" type="remove">
				Removed UndefinedOptionException, and replaced by NoSuchElementException
            </action>
            <action dev="flbulgarelli" type="add">
                Equality
            </action>
            <action dev="flbulgarelli" type="add">
                Nul-Safe Functions
            </action>
		</release>
	    <release version="1.1" date="TBD" description="Composition">
            <action dev="flbulgarelli" type="add">
                Predicate composition 
            </action>
            <action dev="flbulgarelli" type="add">
                Improved function composition 
            </action>
            <action dev="flbulgarelli" type="add">
                Rich function composition 
            </action>
            <action dev="flbulgarelli" type="add">
                Strings.reflectionToString() function 
            </action>
            <action dev="flbulgarelli" type="add">
                Tuples.toPair() and Tuples.toTriple() functions 
            </action>
        </release>
	</body>
</document>